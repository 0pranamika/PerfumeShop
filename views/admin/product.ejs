        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Product Management</h2>
                    <!-- <p>Whole data about your business here</p> -->
                </div>
            </div> 
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap mb-0" id="datatablesSimple">
                                <thead class="table-light">
                                    <tr>
                                        <th class="align-middle" scope="col">Product Name</th>
                                        <th class="align-middle" scope="col">Category</th>
                                        <th class="align-middle" scope="col">Brand</th>
                                        <th class="align-middle" scope="col">Price</th>
                                        <th class="align-middle" scope="col">Added</th>
                                        <th class="align-middle" scope="col">Stock</th>
                                        <th class="align-middle" scope="col">Status</th>
                                        <th class="align-middle" scope="col">Action</th>

                                    </tr>
                                </thead>    
                                <tbody>
                                    <% product.forEach(product => {%>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img style="width: 40px; height: 40px; border-radius: 5px; border: 1px solid #747474;position:sticky; top: 50%; bottom: 50%; margin-left: 4px;" src="/static/admin-assets/imgs/product/<%= product.image%>" alt="<%=product.image%>"

                                                    >&nbsp;
                                                    <span style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; white-space: normal; text-overflow: ellipsis; margin-top: 25px;">
                                                        <%= product.name %>
                                                    </span>     
                                                </div>                                   
                                            </td>
                                            <td>
                                                <div class="mt-2">
                                                    <% for (const cat of category) { %>
                                                        <% if (JSON.stringify(product.category) == JSON.stringify(cat._id)) { %>
                                                            <%= cat.name %>
                                                          <% break; %>
                                                        <% } %>
                                                    <% } %>  
                                                </div>
                                            </td>
                                            <td>
                                                <% for (const brand of brands) { %>
                                                    <% if ( JSON.stringify(product.brand) == JSON.stringify(brand._id)) { %>
                                                        <%= brand.name %>
                                                      <% break; %>
                                                    <% } %>
                                                <% } %>  
                                                <div class="mt-2">
                                                </div>
                                              </td>
                                            <td>
                                                <div class="mt-2">
                                                    <%= product.price %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="mt-2 d-flex flex-row justify-content-left gap-1">
                                                    <%= product.productAddDate.toLocaleString('en-US') %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="mt-2 d-flex flex-row justify-content-left gap-1">
                                                    <%= product.stock %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="mt-2 d-flex flex-row justify-content-left gap-1">
    
                                                    <% if(product.is_listed)  {
                                                        if(product.stock <= 10) { %>
                                                            <div class="rounded-3 px-1 text-center bg-warning text-white text-nowrap">Low stock</div>
                                                        <% } else{ %>  
                                                            <div class="rounded-3 px-1 text-center bg-success text-white text-nowrap">In stock</div>
                                                        <% } 
                                                    } else { %>    
                                                        <div class="rounded-3 px-1 text-center bg-danger text-white text-nowrap">Unlisted</div>     
                                                    <% }%>          
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-row justify-content-left gap-1">
                                                    <a href="/admin/edit-product?id=<%= product._id %>" type="button" class="p-2 btn btn-warning">
                                                        <span class="d-flex align-items-center material-symbols-outlined">edit</span>
                                                    </a>
                                                    <a onclick="Unlistandlist('<%= product._id %>', `<%= product.is_listed ? 'unlist' : 'list' %>`)" type="button" class="p-2 btn <%= product.is_listed ? 'btn-danger' : 'btn-success' %>">
                                                        <span class="d-flex align-items-center material-symbols-outlined"><%= product.is_listed ? 'unlist' : 'list' %></span>
                                                    </a>                       
                                                </div>
                                            </td>
                                        </tr>
                                    <%}); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
