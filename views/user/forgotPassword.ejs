<body><main>
    <div class="container">
        <div class="form-box" style="margin-top: 145px;">
            <div class="form-tab">
                <div class="tab-content">
                    <div class="row justify-content-center">
                        <div class="col-md-6" >
                            <div class="card-body" >
                                <h1 class="head card-title text-center"><b>Forgot Password</b></h1>
                                <br><br>
                                <form action="/forgotPassword" method="post" onsubmit="return validationChecking()" id="otpForm">
                                    <div class="mb-3 position-relative custom-form-field"  >
                                        <span class="input-group-text" style="width: 190%; margin-left: -65px;" >
                                            <i class="fa fa-lock" aria-hidden="true"></i>
                                            <input type="email" class="ms-2 form-control" id="email" name="email"  placeholder="Enter Email" style="text-align: center;">
                                        </span>
                                        <div id="erroremail" class="mt-0 ms-2 position-absolute text-danger"></div>
                                    </div>
                                    <br>
                                    <div class="form-group text-center">
                                        <button type="submit" class="btn btn-primary"  name="login">Submit</button>
                                    </div>

                                    <div id="invalid">
                                      <% if (typeof error !== 'undefined' && error) { %>
                                          <p class="text-danger text-center" id="message"><%= error %></p>
                                      <% } %>
                                    </div>  
                                    <div id="invalid">
                                      <% if (typeof message !== 'undefined' && message) { %>
                                          <p style="color: rgb(8, 96, 0);" id="message"><%= message %></p>
                                      <% } %>
                                    </div>
                                </form> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>            
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<script>

    document.addEventListener('DOMContentLoaded', function () {
    let emailId = document.getElementById("email");
    let errorEmail = document.getElementById("erroremail");


    emailId.addEventListener('input', function () {
        errorEmail.innerHTML = emailId.value.trim() === "" ? "Please enter user name" : /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(emailId.value) == false ? "Please enter alphabets only" : "";
    });


    });
    function validationChecking() {
    let emailId = document.getElementById("email")
    let errorEmail = document.getElementById("erroremail");
    

    errorEmail.innerHTML =
    emailId.value.trim() === ""
        ? "Please enter email"
        : /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(emailId.value) == false
        ? "Please enter valid email only"
        : "";
    
    if (errorEmail.innerHTML ) return false;
    
    return true;
    }

</script>

